                <Label Text="0" TextColor="Black" Grid.Row="2" Grid.Column="2" FontSize="Large" HorizontalTextAlignment="Center"/>
            </Grid>
        </Grid>

        <StackLayout Orientation="Horizontal" Spacing="10" HorizontalOptions="CenterAndExpand">
            <Label Text="1" FontSize="35" Margin="5"/>
            <Label Text="2" FontSize="35" Margin="5"/>
            <Label Text="3" FontSize="35" Margin="5"/>
            <Label Text="4" FontSize="35" Margin="5"/>
            <Label Text="5" FontSize="35" Margin="5"/>
